<?xml version="1.0" encoding="utf-8"?>
<com.tispr.hint.hintapp.HintViewContainer xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <com.tispr.hint.hintapp.HintView
        android:id="@+id/hint_view"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_next_line"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:swipeDirection="RIGHT"
        app:maxSize="60dp"
        app:maxViewOffset="0.7"
        app:minSize="32dp"
        app:secondSrc="@drawable/ic_next_fill"
        app:secondSrcOffset="0.45"
        app:showViewOffset="0.15" />

    <com.tispr.hint.hintapp.HintView
        android:id="@+id/hint_view2"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_discard_line"
        app:swipeDirection="LEFT"
        app:maxSize="60dp"
        app:maxViewOffset="0.7"
        app:minSize="32dp"
        app:secondSrc="@drawable/ic_discard_fill"
        app:secondSrcOffset="0.45"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:showViewOffset="0.15" />

</com.tispr.hint.hintapp.HintViewContainer>